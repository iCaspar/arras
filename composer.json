{
  "name": "icaspar/arras",
  "description": "Arras, rebuilt from the ground up.",
  "type": "theme",
  "keywords": [
    "wordpress",
    "wp",
    "theme",
    "arras"
  ],
  "homepage": "https://caspar.green",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Caspar Green",
      "email": "cg@caspar.green"
    }
  ],
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "xwp/wp-dev-lib",
        "version": "1.0.1",
        "source": {
          "url": "https://github.com/xwp/wp-dev-lib.git",
          "type": "git",
          "reference": "master"
        }
      }
    }
  ],
  "require": {
    "php": "^5.6|^7.1",
    "composer/installers": "^1.4"
  },
  "require-dev": {
    "php": "^5.6|^7.1",
    "brain/monkey": "^2.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
    "mikey179/vfsStream": "^1.6",
    "phpunit/phpunit": "5.7.9|~6",
    "roave/security-advisories": "dev-master",
    "sirbrillig/phpcs-variable-analysis": "^2.0",
    "squizlabs/php_codesniffer": "^3.3",
    "wimg/php-compatibility": "^8.0",
    "wp-coding-standards/wpcs": "^1.0.0",
    "xwp/wp-dev-lib": "^1.0.1"
  },
  "autoload": {
    "psr-4": {"Arras\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": {
      "Arras\\Tests\\Unit\\": "tests/phpunit/unit/",
      "Arras\\Tests\\Integration\\": "tests/phpunit/integration/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-order": true
  },
  "minimum-stability": "dev",
  "scripts": {
    "install-codestandards": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    ],
    "phpcs-src": "\"vendor/bin/phpcs\" --ignore=*/tests/*",
    "phpcs-tests": "\"vendor/bin/phpcs\" --runtime-set testVersion 5.6 tests/phpunit/",
    "run-phpcs": [
      "@phpcs-src",
      "@phpcs-tests"
    ],
    "test-unit": "\"vendor/bin/phpunit\" --testsuite unit --color=always",
    "test-integration": "\"vendor/bin/phpunit\" --testsuite integration --configuration tests/phpunit/integration/phpunit.xml.dist --color=always",
    "run-tests": [
      "@test-unit",
      "@test-integration"
    ]
  }
}
